#:kivy 1.10
<CharacterSelect>:
    button_lay: button_lay
    scroll_lay: scroll_lay
    search_bar: search_bar

    title: 'Select your character'
    size_hint: 0.33, 0.7
    auto_dismiss: False
    background_color: [0, 0, 0, 0]

    FloatLayout:
        orientation: 'vertical'
        id: button_lay

        BoxLayout:
            size_hint: 1, None
            pos_hint: {'y': -0.05, 'x': 0}
            height: 30

            TextInput:
                id: search_bar
                size_hint: 0.8, 1
                multiline: False
                on_text_validate: root.search(self.text)

            Button:
                text: "Clear"
                size_hint: 0.2, 1
                on_release: root.clear_search()

        ScrollView:
            pos_hint: {'top': 1, 'x': 0}
            size_hint: 1, None
            height: root.height - 100
            scroll_type: ['content', 'bars']
            bar_width: 5
            id: scroll_lay
        Button:
            text: "OK"
            size_hint: 1, None
            height: 40
            pos_hint: {'y': 0, 'x': 0}
            on_release: root.dismiss(self)

<LoginScreen>:
    username: username_input.text

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 300, 150
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        TextInput:
            id: username_input
            on_text_validate: root.on_login_clicked()
            multiline: False
            text: "TestingMO"

        Button:
            text: "Log in"
            on_release: root.on_login_clicked()

        Button:
            text: "Choose character"
            on_release: root.on_select_clicked()

        Button:
            text: "Settings"


<LogWindow>:
    Label:
        text: str("Long as fuck text" * 100)
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]


<SpriteWindow>:
    center_sprite: center_s
    left_sprite: left_s
    right_sprite: right_s
    Image:
        id: center_s
        opacity: 0
        size_hint: None, None
        size: 600, 600
        pos: root.x + 100, root.y

    Image:
        id: left_s
        opacity: 0
        size_hint: None, None
        size: 600, 600
        pos: root.x, root.y

    Image:
        id: right_s
        opacity: 0
        size_hint: None, None
        size: 600, 600
        pos: root.x, root.y


<MainScreen>:
    icons_layout: icons_layout
    sprite_preview: sprite_preview
    sprite_window: sprite_window
    msg_input: msg_input
    toolbar: toolbar

    FloatLayout:
        SpriteWindow:
            id: sprite_window
            size_hint: None, None
            size: 800, 600
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        TextBox:
            size_hint: None, None
            size: 800, 200
            pos: sprite_window.x, sprite_window.y
            canvas:
                Color:
                    rgba: 0.3, 0.3, 0.3, 0.3
                Rectangle:
                    pos: self.pos
                    size: self.size

        TextInput:
            id: msg_input
            multiline: False
            size_hint: None, None
            size: 800, 30
            pos: sprite_window.x, sprite_window.y - 35

        LogWindow:
            id: log_window
            size_hint: None, None
            x: sprite_window.right + 5
            top: sprite_window.top
            size: 200, 300

        OOCWindow:
            size_hint: None, None
            size: 200, 330
            x: log_window.x
            top: log_window.y
            canvas:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        IconsLayout:
            id: icons_layout
            size_hint: None, None
            size: 250, 300
            right: sprite_window.x - 5
            y: sprite_window.y

        SpritePreview:
            id: sprite_preview
            size_hint: None, None
            size: 800 / 3, 600 / 3
            y: icons_layout.top + 5
            x: icons_layout.x

        Toolbar:
            id: toolbar
            size_hint: None, None
            size: 800, 40
            pos: msg_input.x, msg_input.y - 10


<SpritePreview>:
    center_sprite: center_s

    Image:
        id: center_s
        opacity: 0
        size_hint: None, None
        size: 200, 200
        pos: root.x + 30, root.y


<Toolbar>:
    subloc_drop: subloc

    DropDown:
        id: subloc
        size_hint: 0.3, 1


<CharacterSelect>:
    main_lay: main_lay
    BoxLayout:
        orientation: 'vertical'
        id: main_lay


<MainScreenManager>:
    main_screen: main_screen
    LoginScreen:
        name: "login"
        id: login_screen

    MainScreen:
        name: "main"
        id: main_screen

    SettingsScreen:
        name: "settings"
        id: settings_screen

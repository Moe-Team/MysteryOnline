<LoginScreen>:
    username: username_input.text

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 300, 100
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        TextInput:
            id: username_input
            on_text_validate: root.on_login_clicked()
            multiline: False
            text: "Username"

        Button:
            text: "Log in"
            on_release: root.on_login_clicked()

        Button:
            text: "Settings"


<LogWindow>:
    Label:
        text: str("Long as fuck text" * 100)
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]


<MainScreen>:

    FloatLayout:
        SpriteWindow:
            id: sprite_window
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint: None, None
            size: 800, 600
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        TextInput:
            size_hint: None, None
            size: 800, 30
            pos: sprite_window.x, sprite_window.y - 35

        LogWindow:
            size_hint: None, None
            x: sprite_window.right + 5
            top: sprite_window.top
            size: 200, 600



<MainScreenManager>:
    main_screen: main_screen
    LoginScreen:
        name: "login"
        id: login_screen

    MainScreen:
        name: "main"
        id: main_screen

    SettingsScreen:
        name: "settings"
        id: settings_screen

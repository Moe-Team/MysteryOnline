<LoginScreen>:
    username: username_input.text

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 300, 100
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        TextInput:
            id: username_input
            text: "Username"

        Button:
            text: "Log in"
            on_release: root.on_login_clicked()

        Button:
            text: "Settings"

<MainScreen>:
    msg_label: message_label
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: 500, 200
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: "Haha got you"

        Label:
            id: message_label

        TextInput:
            id: message_text

        Button:
            id: message_btn

<MainScreenManager>:
    main_screen: main_screen
    LoginScreen:
        name: "login"
        id: login_screen

    MainScreen:
        name: "main"
        id: main_screen

    SettingsScreen:
        name: "settings"
        id: settings_screen

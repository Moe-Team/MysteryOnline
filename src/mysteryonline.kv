#:kivy 1.10
<Label>:
    font_name: 'res/LabelFont.ttf'
	
<TextInput>:
    font_name: 'res/InputFont.ttf'


<MainScreenManager>:
    main_screen: main_screen

    LoginScreen:
        name: "login"
        id: login_screen
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "misc_img/loginBG.jpg"

    MainScreen:
        name: "main"
        id: main_screen
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "misc_img/background.jpg"

#:kivy 1.10
<UserBoxPopup>:
    char_lbl: char_lbl
    sub_lbl: sub_lbl
    loc_lbl: loc_lbl
    warp: warp

    size_hint: None, None
    size: 100, 150

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        Label:

        Label:
            id: char_lbl

        Label:
            id: sub_lbl

        Label:
            id: loc_lbl

        Label:

        Button:
            id: warp
            text: "Warp"
            size_hint: None, None
            pos_hint: {"center_x" : 0.5, "y" : 0.75}
            width: 60
            height: 30

        Label:


<UserBox>:
    lbl: lbl.__self__
    pm: pm.__self__
    mute: mute.__self__

    BoxLayout:
        orientation: 'horizontal'
        width: root.width
        height: lbl.height
        pos: root.pos

        Label:
            id: lbl
            text_size: self.width, None
            size: self.texture_size

        Button:
            id: pm
            text: "PM"
            size_hint: None, None
            width: 40
            height: lbl.height


        Button:
            id: mute
            text: "Mute"
            size_hint_x: 0.4
            height: lbl.height

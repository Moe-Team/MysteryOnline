#:kivy 1.10
<PrivateMessageScreen>:
    prv_users_scroll: prv_users_scroll
    pm_body: pm_body
    size_hint: 0.8, 0.8
    padding: 10, 10

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            id: pm_body_box

            ScrollView:
                size_hint: 0.8, 1

                GridLayout:
                    id: pm_body
                    size_hint_y: None
                    row_default_height: '60'
                    row_force_default: True
                    height: root.height
                    spacing: 0,0
                    cols: 2

            TextInput:
                id: pm_input
                on_text_validate: root.send_pm()
                multiline: False
                height: 30
                size_hint: 1, None

        BoxLayout:
            size_hint: 0.2, 1
            orientation: 'vertical'
            id: pm_user_box

            ScrollView:
                valign: 'top'
                size_hint: 1, 0.8
                size: pm_user_box.width, pm_user_box.height
                title: 'User list'
                id: prv_users_scroll

                GridLayout:
                    cols: 1
                    spacing: 10
                    size_hint_y: None
                    size: pm_user_box.width, pm_user_box.height
                    id: prv_users_list

            Button:
                size_hint: 1, 0.2
                valign: 'bottom'
                text: 'Close'
                on_release: root.prv_chat_close_btn()
                id: prv_chat_btn

<DebugModePopup>:
    size_hint: 0.8, 0.8

    DebugModeInterface:


<DebugModeInterfaceButton@Button>:
    size_hint: 1, 0
    height: 40


<DebugModeInterface>:
    orientation: 'vertical'

    DebugModeInterfaceButton:
        text: "Create user"
        on_release: root.open_user_creation()


<UserCreationRow@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: 40


<UserCreationLabel@Label>:
    size_hint: 0.4, 1


<UserCreationTextInput@TextInput>:
    size_hint: 0.4, 1
    multiline: False


<UserCreationButton@Button>:
    size_hint: 0.2, 1


<UserCreationInterface>:
    username_input: username_input
    character_input: character_input
    location_input: location_input
    sublocation_input: sublocation_input
    position_input: position_input

    size_hint: 0.4, 0.4
    padding: 10

    BoxLayout:
        orientation: 'vertical'
        padding: 5

        UserCreationRow:

            UserCreationLabel:
                text: "Username"

            UserCreationTextInput:
                id: username_input

            UserCreationButton:
                text: "Random"
                on_release: root.create_random_username()

        UserCreationRow:

            UserCreationLabel:
                text: "Character"

            UserCreationTextInput:
                id: character_input

            UserCreationButton:
                text: "Current"
                on_release: root.use_current_character()

        UserCreationRow:

            UserCreationLabel:
                text: "Location"

            UserCreationTextInput:
                id: location_input

            UserCreationButton:
                text: "Current"
                on_release: root.use_current_location()

        UserCreationRow:

            UserCreationLabel:
                text: "Sublocation"

            UserCreationTextInput:
                id: sublocation_input

            UserCreationButton:
                text: "Current"
                on_release: root.use_current_sublocation()

        UserCreationRow:

            UserCreationLabel:
                text: "Position"

            UserCreationTextInput:
                id: position_input
                hint_text: "right, left, center"

            UserCreationButton:
                text: "Current"
                on_release: root.use_current_position()

        UserCreationRow:

            UserCreationButton:
                text: "Cancel"
                on_release: root.dismiss()

            UserCreationButton:
                text: "Create"
                on_release: root.on_create()
